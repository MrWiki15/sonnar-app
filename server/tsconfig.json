{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "*.js",
    "**/*.js",
    "**/*.json"
  ],
  "exclude": ["node_modules"]
}
